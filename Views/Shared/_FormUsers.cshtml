@model SurveyUsersViewModel

<div class="text-center">
    <h1 class="display-4">Lista użytkowników.</h1>
    <h1 class="display-4">Możesz je filtrować po wybranym filtrze</h1>


    <form asp-action="Admin3" method="get">
        <div class="form-group">
            <label for="filter">Wybierz filtr:</label>
            <select name="filter" class="form-control" id="filter">
                <option value="UserId">Użytkownik (UserId)</option>
                <option value="Age">Wiek</option>
                <option value="Sex">Płeć</option>
                <option value="Localization">Lokalizacja</option>
            </select>
        </div>

        <div class="form-group mt-2">
            <label for="value">Wartość:</label>
            <input type="text" name="value" class="form-control" id="value" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Filtruj</button>
    </form>


    <div class=" row justify-content-center">
        @if (Model.UsersList == null)
        {
            <p>Brak danych — lista jest null</p>
        }
        else if (!Model.UsersList.Any())
        {
            <p>Lista pusta — brak wyników filtracji</p>
        }
        else
        {
            <p>Znaleziono @Model.UsersList.Count użytkownikow</p>
        }

        <table class="table">
            <thread>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>

                    <th scope="col">Age</th>
                    <th scope="col">Localization</th>

                </tr>

            </thread>
            <tbody>
              
                    @foreach (var User in Model.UsersList)
                    {
                        <tr>
                            <td>@User.Id</td>
                            <td>@User.Name</td>
                            <td>@User.Age</td>
                            <td>@User.Localization</td>
                        </tr>
                    }
                
            </tbody>


        </table>
    </div>

</div>
