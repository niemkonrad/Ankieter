@model SurveyQuestionsViewModel

<div class="text-center">
    <h1 class="display-4">Na tej stronie zarządzasz pytaniami ankiety.</h1>
    <h1 class="display-4"> Możesz je dodać,usunąć lub edytować.</h1>


    <div class="row justify-content-center">
        <form asp-action="Insert" id="form-action" method="post" role="form">
        

            <!-- Ukryte pola -->
            <input asp-for="Question.Id" type="hidden" />
         

            <!-- Walidacja ogólna -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Treść Pytania</th>
                        <th>Typ Pytania</th>
                        <th>Jest aktywne?</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input asp-for="Question.Name" class="form-control" />
                            <span asp-validation-for="Question.Name" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="Question.Type" class="form-control" />
                            <span asp-validation-for="Question.Type" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="Question.IsActive" class="form-check-input" />
                            <span asp-validation-for="Question.IsActive" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-3">
                <input type="submit" id="form-button" value="Dodaj Pytanie" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <h1 class="display-4">Lista pytań</h1>

    <div class=" row justify-content-center">

        <table class="table">
            <thread>
                <tr>
                    <th scope="col">Numer Pytania</th>
                    <th scope="col">Treść Pytania</th>
                    <th scope="col">Typ</th>
                    <th scope="col">TimeStamp</th>
                    <th scope="col">Jest Aktywne?</th>
                </tr>

            </thread>
            <tbody>
                @foreach (var t in Model.QuestionsList)
                {
                    <tr>
                        <th class="todos-column" scope="row">@t.Id</th>
                        <th class="todos-column" scope="row">@t.Name</th>
                        <th class="todos-column">@t.Type</th>
                        <th class="todos-column">@t.TimeStamp</th>
                        <th class="todos-column">@t.IsActive</th>
                        <td class="button-column">
                            <input type="submit" value="Usuń" onClick="deleteQuestion(@t.Id)" />
                        
                            <button type="button" onclick="populateForm(@t.Id)">Edytuj</button>
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>

</div>
