<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ankieter</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ankieter.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ankieter</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
        var isAdminSection = currentAction == "admin" || currentAction == "admin2" || currentAction == "admin3";
    }
    @if (isAdminSection)
    {
        <div class="admin-navbar" style="margin-bottom:20px;">
            <a href="@Url.Action("Admin", "Home")"
            class="btn @(currentAction == "admin" ? "btn-secondary disabled" : "btn-primary")"
            @(currentAction == "admin" ? "tabindex=\"-1\" aria-disabled=\"true\"" : "")>
                Pytania
            </a>

            <a href="@Url.Action("Admin2", "Home")"
            class="btn @(currentAction == "admin2" ? "btn-secondary disabled" : "btn-primary")"
            @(currentAction == "admin2" ? "tabindex=\"-1\" aria-disabled=\"true\"" : "")>
                Odpowiedzi
            </a>

            <a href="@Url.Action("Admin3", "Home")"
            class="btn @(currentAction == "admin3" ? "btn-secondary disabled" : "btn-primary")"
            @(currentAction == "admin3" ? "tabindex=\"-1\" aria-disabled=\"true\"" : "")>
                Użytkownicy
            </a>
        </div>

        <style>
            .btn {
            padding: 8px 16px;
            margin-right: 8px;
            text-decoration: none;
            color: white;
            border-radius: 4px;
            display: inline-block;
        }
        .btn-primary {
            background-color: #007bff;
        }
        .btn-secondary {
            background-color: #6c757d;
            cursor: default;
            pointer-events: none; /* wyłącza kliknięcie */
        }
        .btn.disabled {
            opacity: 0.65;
        }
    </style>
    }
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <div class="container">
        @if (action == "Admin")
        {
            @await Html.PartialAsync("_Form")
        }
        @if (action == "Admin2")
        {
            @await Html.PartialAsync("_FormAnswers")
        }
        @if (action == "Admin3")
        {
            @await Html.PartialAsync("_FormUsers")
        }

        @if (controller == "Home" && action == "User" && !(ViewBag.SurveyFinished ?? false)) 
        {
            @await Html.PartialAsync("_FormUser")
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Ankieter - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <main role="main">
        @RenderBody()
    </main>
    <div class="alert alert-info">
        Controller: @controller<br />
        Action: @action
    </div>
</body>
</html>
